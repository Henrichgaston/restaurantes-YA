<div class="container w-50 bg-white mt-5 p-3 shadow">
  <div class="row">
    <div class="col">
      <%= form_with model: @restaurant do |f| %>
                <%= f.label :Nombre, class: "form-label" %>
                <%= f.text_field :name, class: "form-control" %>
                <%= f.label :Dirección, class: "form-label" %>
                <%= f.text_field :address,  class: "form-control" %>
                <%= f.label :Especialidad, class: "form-label" %>
                <%= f.text_field :specialty,  class: "form-control" %>
                <%= f.label :Descripción, class: "form-label" %>
                <%= f.text_field :description,  class: "form-control" %>
                <%= f.label :Imagen, class:"form-label" %>
                <%= f.file_field :photo, class:"form-control" %>
              <%= f.submit "Crear", class:" mt-3 btn btn-secondary" %> <%= link_to "volver", restaurants_path, class:"btn btn-warning mt-3" %>
        <% end %>
    </div>
  </div>
</div>
