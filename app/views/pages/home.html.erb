<div class="banner">
    <div class="container">
     <%= image_tag "logoninerablanco.png", :size => "100x100",class:"ml-7 mb-3"%>
      <h1>El cuidado de tus hijos en las mejores manos, las de nuestras niñeras</h1>
      <p>Se parte de esta gran comunidad</p>

      <a class="btn btn-primary" href="#">Registrate ahora!</a>
    </div>
  </div>

<div class="container">
  <div id="header">
    <h1>Mejores niñeras</h1>
    <p>Conoce algunas de nuestras niñeras </p>
  </div>
  <div class="row">
    <% @foods.sample(3).each do |food| %>
      <div class="col-4">
        <div class="card">
          <div class="card-image">
            <%= image_tag food.photo %>
          </div>
          <div class="card-text">
            <p class="card-meal-type"><%= food.name %></p>
            <h2 class="card-title"><%= food.restaurant.name %></h2>
            <p class="card-body"><%= food.description %></p>
          </div>
          <div class="card-price"> <%= number_to_currency(food.price, delimiter: ".", precision: 0, unit: "ARS $ ") %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
