<div class="container w-50 bg-white mt-5 p-3 shadow-lg rounded border">
  <div class="row">
    <div class="col">
      <%= form_with model: [restaurant, food] do |f| %>
        <%= f.label :Nombre, class: "form-label" %>
        <%= f.text_field :name, class: "form-control mb-3" %>
        <%= f.label :Descripción, class: "form-label" %>
        <%= f.text_field :description, class: "form-control mb-3" %>
        <%= f.label :Disponibilidad, class: "form-label" %>
        <%= f.select :available, [['Sí', true], ['No', false]], {}, { class: "form-select form-control mb-3" } %>
        <%= f.label :Imagen, class: "form-label" %>
        <%= f.file_field :photo, class: "form-control mb-3" %>
        <%= f.label :Precio, class: "form-label" %>
        <%= f.text_field :price, class: "form-control mb-3" %>
        <%= f.submit food.new_record? ? "Crear" : "Actualizar", class: "mt-3 btn" %> <%= link_to "Volver", restaurants_path, class: "btn-new btn-warnign mt-3" %>
      <% end %>
    </div>
  </div>
</div>
